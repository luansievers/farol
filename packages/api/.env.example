# API configuration
API_PORT=3000

# Database configuration
# For local development with Docker, use:
DATABASE_URL="postgresql://farol:farol_dev_password@localhost:5432/farol?schema=public"

# Storage configuration (S3-compatible)
# For local development with MinIO, use:
STORAGE_ENDPOINT="http://localhost:9000"
STORAGE_REGION="us-east-1"
STORAGE_ACCESS_KEY="minioadmin"
STORAGE_SECRET_KEY="minioadmin"
STORAGE_BUCKET="farol-documents"
STORAGE_FORCE_PATH_STYLE="true"

# For AWS S3 production, use:
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# STORAGE_BUCKET="your-bucket-name"

# AI configuration
# Provider: "openai" or "anthropic"
AI_PROVIDER="openai"
AI_MODEL="gpt-4o-mini"
# AI_BASE_URL=""  # Optional: custom endpoint

# API Keys (set the one matching your provider)
OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# AI parameters (optional, defaults shown)
#
# AI_MAX_TOKENS: Max tokens in response. Higher = longer responses, more cost
# AI_MAX_TOKENS=2048
#
# AI_TEMPERATURE: Creativity (0.0-1.0). Lower = deterministic, higher = creative/random
# AI_TEMPERATURE=0.7
#
# AI_RETRY_ATTEMPTS: Retries on failure. Higher = more resilient, slower on persistent errors
# AI_RETRY_ATTEMPTS=3
#
# AI_RETRY_DELAY_MS: Wait between retries (ms). Higher = less API pressure, slower recovery
# AI_RETRY_DELAY_MS=1000
#
# AI_TIMEOUT_MS: Request timeout (ms). Higher = tolerates slow responses, longer waits on hang
# AI_TIMEOUT_MS=60000
